<odoo>

    <template id="website_search_box"
              inherit_id="website.website_search_box"
              name="Search Box - Autocomplete"
              >

        <xpath expr="//input" position="attributes">
            <attribute name="class">js_website_autocomplete</attribute>
            <attribute name="data-query-field">name</attribute>
            <attribute name="data-display-field">display_name</attribute>
            <attribute name="data-value-field">name</attribute>
            <attribute name="data-limit">10</attribute>
            <attribute name="data-domain">[]</attribute>
            <attribute name="data-model">product.template</attribute>
        </xpath>

    </template>

</odoo>
